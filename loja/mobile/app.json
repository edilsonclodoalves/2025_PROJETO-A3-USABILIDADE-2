{
  "expo": {
    "name": "loja-mobile",
    "slug": "loja-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.example.lojamobile",
      "googleServicesFile": "./GoogleService-Info.plist" # Necessário para Google Sign-In no iOS
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.example.lojamobile",
      "googleServicesFile": "./google-services.json" # Necessário para Google Sign-In no Android
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "@react-native-google-signin/google-signin" # Plugin para Google Sign-In
    ],
    "extra": {
      "eas": {
        "projectId": "YOUR_EAS_PROJECT_ID" # Substitua pelo ID do seu projeto EAS se usar EAS Build
      }
    }
  }
}

